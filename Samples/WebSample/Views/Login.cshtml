@inherits View<object>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <script src="/Js/jQuery-3.3.1/jquery.min.js"></script>
    <script>
        $(function () {
            $("#btnLogin").click(function () {
                $.ajax({
                    url: "/Login",
                    type: "POST",
                    dataType: "json",
                    data: $("#login").serialize(),
                    success: function (res) {
                        if (res.code == 0) {
                            window.location.href = res.data;
                        } else {
                            alert(res.msg);
                        }
                    }
                });
            });
        });
    </script>
</head>
<body>
    <form id="login">
        Login Name: <input name="name" type="text" /><br />
        Login Password:<input name="password" type="password" /><br />
        <input id="btnLogin" type="button" value="LOGIN" />
        <a href="/Register" target="_blank">Register</a>
    </form>
    @Render("/Footer", null)
</body>
</html>
